doctype html
html
  head
    title #{title}
    link(rel='stylesheet', href='/browser/css/reset.css')
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/browser/css/main.css')
  body  
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', arias-expanded='false', aria-controls='navbar')
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') People Power
        #navbar
          if !user
            ul.nav.navbar-nav
              li(class=(title == 'Register' ? 'active' : ''))
                a(href='/user/register') Register
              li(class=(title == 'Login' ? 'active' : ''))
                a(href='/user/login') Login
          else
            ul.nav.navbar-nav.navbar-right
              li 
                a(href='/user/profile')
                  img(src='/uploads/#{user.profileImage}')
              li
                a(href='/user/logout') Logout
    main.container
      != messages()
      block content                   

    script(src='/bower_components/angular/angular.min.js')
    script(src='/bower_components/angular-resource/angular-resource.min.js')
    script(src='/bower_components/angular-route/angular-route.min.js')
    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
    script(src='/bower_components/underscore/underscore-min.js')
    script(src='/browser/js/main.js')
        
